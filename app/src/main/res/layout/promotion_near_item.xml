<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">


    <ImageView
        android:id="@+id/ImgPromotionImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corner_imageview"
        android:src="@drawable/img_avatar_01"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_toEndOf="@+id/ImgPromotionImage"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <com.meeof.meeof.custom.CustomFontTextView
            android:id="@+id/TxtPromotionHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#585858"
            android:textSize="16sp"
            app:fontName="@string/font_name_hind_medium"
            android:text="Adidas Singapore plaza"/>

        <com.meeof.meeof.custom.CustomFontTextView
            android:id="@+id/TxtPromotionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#585858"
            android:textSize="12sp"
            app:fontName="@string/font_name_hind_regular"
            android:text="Adidas Singapore plaza"/>
    </LinearLayout>
</RelativeLayout>