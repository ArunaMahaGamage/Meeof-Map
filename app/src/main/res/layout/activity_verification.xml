                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/back_arrow_circular" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.40"
            android:orientation="vertical">

            <LinearLayout

                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <com.meeof.meeof.custom.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verification"
                    android:textColor="@color/colorPrimaryBackground"
                    android:textSize="20dp"
                    app:fontName="@string/font_name_hind_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.9"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <com.meeof.meeof.custom.CustomFontTextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/verificationTextTopTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_txt_01"
                    android:textColor="@color/colorPrimaryBackground"
                    android:textSize="14dp"
                    app:fontName="@string/font_name_hind_medium" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.9"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <com.meeof.meeof.custom.CustomFontTextView
                    android:id="@+id/emailTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/verify_txt_02"
                    android:textColor="@color/colorPrimaryBackground"
                    android:textSize="14dp"
                    app:fontName="@string/font_name_hind_medium" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/codeEditTextBg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/edit_text_default_margin_left"
            android:layout_marginRight="@dimen/edit_text_default_margin_right"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_lightgrey_border"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="6dp"
                    android:src="@drawable/ico_password" />

            </RelativeLayout>

            <EditText
                android:id="@+id/codeET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@android:color/transparent"
                android:hint="Enter Code"
                android:inputType="textEmailAddress"
                android:textColor="@color/blackColor"
                android:textColorHint="@color/lightGreyTextHintColor"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/emailAddressETClearBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_close" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/submitLLBtn"
