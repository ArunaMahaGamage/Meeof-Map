<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outerRl"
    android:background="@color/whiteColor"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/itemClickLlBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corners_creative_corner"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <com.meeof.meeof.custom.CustomFontTextView
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                app:fontName="@string/font_name_hind_medium"
                android:id="@+id/gridCatLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Parks/Amusement"
                android:textAlignment="center"
                android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true">


        <ImageView
            android:id="@+id/checkMarkDeselectedIv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/blue_color_main_category_unselected" />

        <ImageView
            android:id="@+id/checkMarkSelectedIv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/new_blue_color_category_selected"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>