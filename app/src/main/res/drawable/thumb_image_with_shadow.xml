<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#f9f9f9" />
            <!--shadow Color-->
        </shape>
    </item>


    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="oval">
            <solid android:color="#f6f6f6" />
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="oval">
            <solid android:color="#f9f9f9" />
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">


            <solid android:color="@color/whiteColor" />
            <size
                android:width="22dp"
                android:height="22dp" />
        </shape>
    </item>


</layer-list>